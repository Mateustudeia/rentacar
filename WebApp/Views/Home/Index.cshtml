@model IEnumerable<Repository.Entities.Veiculo>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1><strong>rentacar</strong></h1>
    <p class="lead">Sistema para controle de aluguel de veículos.</p>
</div>

<div class="row">
    @{
        var grid = new WebGrid(Model, canPage: false);
    }
    @grid.GetHtml(tableStyle: "table table-bordered table-responsive table-hover",
        columns: grid.Columns(
             grid.Column("chassis", "Chassis"),
             grid.Column("diaria", "Diária")
        )
   )
</div>